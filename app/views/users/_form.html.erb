<% method = user.persisted? ? "PATCH" : "POST" %>
<% button_msg = user.persisted? ? "Update #{user.username}" : "Create Account" %>

<form action="<%= user_url %>" method="post" class="col-xs-6">

  <input type="hidden" name="_method" value="<%= method %>">
  <input type="hidden" name="authenticity_token"
                       value="<%=form_authenticity_token%>" >

  <div class="form-group">
  <label for="username">Username:</label>
  <input  class="form-control"
          type="text"
          id="username"
          name="user[username]"
          value="<%=user.username%>">
  </div>

  <div class="form-group">
  <label for="firstname">First Name:</label>
  <input  class="form-control"
          type="text"
          id="firstname"
          name="user[fname]"
          value="<%=user.fname%>">
  </div>

  <div class="form-group">
  <label for="lastname">Last Name:</label>
  <input  class="form-control"
          type="text"
          id="lastname"
          name="user[lname]"
          value="<%=user.lname%>">
  </div>
  
  <div class="form-group">
  <label for="description">Description:</label>
  <textarea id="description" name="user[description]" class="form-control"
  ><%=user.description%></textarea>
  </div>

  <div class="form-group">
  <label for="username">Password:</label>
  <input  class="form-control"
          type="password"
          id="password"
          name="user[password]">
  </div>

  <div class="form-group">
  <button name="submit" class="btn btn-primary"><%= button_msg %></button>
  </div>

</form>