<form class='edit-profile'>
	<script src="//widget.cloudinary.com/global/all.js" 
						type="text/javascript"> </script>

	<div class='form-group'>
		<label>First Name</label>
		<input type='text' name='user[fname]' class="form-control"
		 value="<%= user.escape('fname') %>">
	</div>

	<div class='form-group'>
		<label>Last Name</label>
		<input type='text' name='user[lname]' class="form-control"
		 value="<%= user.escape('lname') %>">
	</div>

	<div class='form-group'>
		<label>Description</label>
		<textarea name='user[description]' class="form-control"
		><%= user.escape('description') %></textarea>
	</div>

	<div class="form-group">
		<label>Drag your Profile Picture Below! (or click to browse)</label>
		<div class="file-drop-small"></div>
		<div class="progress progress-small">
		  <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
		</div>
	</div>

	<div class='form-group'>
		<button class='btn btn-primary'>Save</button>
	</div>
</form>