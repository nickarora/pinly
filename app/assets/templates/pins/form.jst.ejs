<div class='form-content'>
	<form class='pin-form'>

		<script>
  		filepicker.setKey("AUN04j7hR4GFXVkpz74tdz");
		</script>

		<div class='form-group'>
			<label>URL</label>
			<input type='text' name='pin[url]' class="form-control"
			 value="<%= pin.escape('url') %>" placeholder="Enter the URL of your New Pin">
		</div>

		<div class='form-group'>
			<input type="file" 
						 id="selectedFile"
						 class="upload"
						 style="display: none;">
			<input type="button"
						 value="Select an Image"
						 class="btn btn-default upload-button"
						 onclick="document.getElementById('selectedFile').click();"
						 />
			<div class="filename"></div>
		</div>

		<div class="form-group">
			<div class="file-drop">Or Just Drop an Image Here...</div>
		</div>

		<div class="progress">
		  <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
		</div>

		<div class='form-group'>
			<button class='btn btn-primary'>Next</button>
		</div>

	</form>
</div>